{
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "useTabs": false,
  "printWidth": 100,
  "trailingComma": "all",
  "semi": true,
  "singleAttributePerLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@app/(.*)$",
    "^@pages",
    "^@widgets",
    "^@features",
    "^@entities",
    "^@shared/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
